    <main>
        <section class="slice bg-gradient-secondary overflow-hidden">
            <div class="container position-relative zindex-100">
                <div class="mb-md text-center">
                    <h3 class="mt-4">Welcome to our <strong class="font-weight-700">events</strong></h3>
                    <div class="fluid-paragraph text-center mt-4">
                        <p class="lead lh-180">We made a selection for You with our best events on earth. We hope you will find your happiness with us... Now, it's time to enjoy!</p>
                    </div>
                </div>

     
                <div class="row">
                    <% @events.each do |event| %>
                        <div class="col-lg-4">
                            <div class="card shadow border-0 mb-4">
                                <div class="card-body py-5">
                                    <div class="d-flex align-items-start">
                                        <div class="icon icon-shape icon-green rounded-circle">
                                            <i class="fab fa-html5"></i>
                                        </div>
                                        <div class="icon-text pl-4">
                                            <%if event.avatar.attached?%>
                                                  <p><%= image_tag event.avatar, alt: 'avatar' %></p>
                                            <% end %>
                                            <h5 class="font-weight-bold"><%= event.title %></h5>
                                        </div>
                                    </div>
                                    <p class="mt-4"><%= event.description %></p>
                                    <p class="mt-4">Location: <%= event.location %> - Price: <%= event.price %>â‚¬</p>
                                    <p class="mt-4"><%= link_to 'Show', event %></p>
                                </div>
                            </div>
                        </div>
                    <% end%>
                </div>
            </div>
        </section> 
